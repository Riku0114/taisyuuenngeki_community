<div class="card-list-container py-5">
  <div class="card image_size mx-auto mt-4 shadow-lg ">
      <div class="card-header">
         <div class="row">
            <% @comment.post_image.images.each do |images| %>
            <div class='col-6 p-1'>
               <%= link_to admin_post_image_path(@comment.post_image.id) do %>
                  <%= image_tag images, class: "index_image" %>
               <% end %>
            </div>
            <% end %>
         </div>
      </div>
      <div class="card-body">
         <div class="row">
            <div class="col-12">
               <p class="card-title link-secondary">
                  <%= link_to admin_user_path(@comment.post_image.user.id), class: "text-dark" do %>
                     <span><i class="fas fa-user"></i></span><%= @comment.post_image.user.name %>
                  <% end %>
               </p>
            </div>
            <div class="col-12">
               <p class="card-title">
                  劇団名　<%= @comment.post_image.gekidann_name %>
               </p>
               <p class="card-title">
                  役者名　<%= @comment.post_image.yakusya_name %>
               </p>
               <p class="card-text">
                  　<%= @comment.post_image.post_content %>
               </p>
            </div>
            <div class="col-4 mt-4">
               <p>
                  ♡<%= @comment.post_image.favorites.count %> いいね
               </p>
            </div>
            <div class="col-8 mt-4">
               <p>
                  <%= link_to "#{@comment.post_image.comments.count} コメント", admin_post_image_path(@comment.post_image.id), class: "text-dark" %>
               </p>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="card-list-container py-5">
   <div class="card image_size mx-auto shadow-lg ">
      <div class="card-body">
         <div class="row">
            <div class="col-6">
               <p>
                  <span><i class="fas fa-user"></i></span>
                  <%= link_to admin_user_path(@comment.user.id), class: "text-dark" do %>
                     <%= @comment.user.name %>
                  <% end %>
               </p>
            </div>
            <div class="col-6">
               <p>
                  <%= link_to "編集",edit_admin_comment_path(@comment.id), class: "btn btn-success btn-sm" %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  　<%= @comment.comment_content %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  <%= @comment.created_at.strftime('%Y/%m/%d') %>
               </p>
            </div>
         </div>
      </div>
   </div>
</div>