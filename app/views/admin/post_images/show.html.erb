<div class="card-list-container py-5">
  <div class="card image_size mx-auto mt-4 shadow-lg ">
      <div class="card-header">
         <%= link_to "編集する", edit_admin_post_image_path(params[:id]), class: "btn btn-success btn-sm" %>
         <div class="row">
            <% @post_image.images.each do |images| %>
            <div class='col-6 p-1'>
               <%= link_to rails_blob_path(images) do %>
                  <%= image_tag images, class: "index_image" %>
               <% end %>
            </div>
            <% end %>
         </div>
      </div>
      <div class="card-body">
         <div class="row">
            <div class="col-12">
               <p class="card-title link-secondary">
                  <%= link_to admin_user_path(@post_image.user.id), class: "text-dark" do %>
                     <i class="fas fa-user"></i></span> <%= @post_image.user.name %>
                  <% end %>
               </p>
            </div>
            <div class="col-12">
               <p class="card-title">
                  劇団名　<%= @post_image.gekidann_name %>
               </p>
               <p class="card-title">
                  役者名　<%= @post_image.yakusya_name %>
               </p>
               <p class="card-text">
                  　<%= @post_image.post_content %>
               </p>
            </div>
            <div class="col-4 mt-4">
               <p>
                  ♡<%= @post_image.favorites.count %> いいね
               </p>
            </div>
            <div class="col-12">
               <p>
                  <%= @post_image.comments.count %>件のコメント
               </p>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="card-list-container py-5">
   <% @post_image.comments.each do |comment| %>
   <div class="card image_size mx-auto shadow-lg ">
      <div class="card-body">
         <div class="row">
            <div class="col-6">
               <p>
                  <p class="card-title">
                  <%= link_to admin_user_path(@post_image.user.id), class: "text-dark" do %>
                     <span><i class="fas fa-user"></i></span> <%= comment.user.name %>
                  <% end %>
               </p>
            </div>
            <div class="col-6">
               <p>
                  <%= link_to admin_comment_path(comment.id), class: "btn btn-success btn-sm" do %>
                     コメント詳細
                  <% end %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  　<%= comment.comment_content %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  <%= comment.created_at.strftime('%Y/%m/%d') %>
               </p>
            </div>
         </div>
      </div>
   </div>
   <% end %>
</div>>