<div class="jumbotron bg-light ">
   <div class="container">
      <div class="row">
         <div class="col-md-12 text-right">
            <%= link_to "編集", edit_admin_user_path(params[:id]), class: "btn btn-success btn-sm" %>
         </div>
         <div class="col-md-12 text-center h4 mt-5">
            <%= @user.name %>のマイページ
         </div>
         <div class="col-md-12 text-center mt-3">
            <%= @user.introduction %>
         </div>
         <div class="col-md-12 text-center mt-3">
            <%= @user.email %>
         </div>
         <div class="col-md-12 text-center mt-3">
            退会ステータス
               <% if @user.is_deleted == false %>
            有効
               <% else @user.is_deleted == true %>
            退会
               <% end %>
         </div>
         <div class="col-4 text-right pt-4 p-0">
            <%= link_to "コメント一覧", admin_users_comments_path(@user.id), class: "btn btn-success btn-sm" %>
         </div>
         <div class="col-4 text-center pt-4">
            <%= link_to "投稿一覧", admin_user_path(@user.id), class: "btn btn-success btn-sm" %>
         </div>
         <div class="col-4 text-left pt-4 p-0">
            <%= link_to "いいね一覧", admin_users_favorites_path(@user.id), class: "btn btn-success btn-sm" %>
         </div>
      </div>
   </div>
</div>
<div class="card-list-container py-5">
   <% @comments.each do |comments| %>
   <div class="card image_size mx-auto shadow-lg">
      <div class="card-body">
         <div class="row">
            <div class="col-6">
               <p>
                  <%= link_to admin_user_path(comments.user.id), class: "text-dark" do %>
                     <span><i class="fas fa-user"></i></span> <%= comments.user.name %>
                  <% end %>
               </p>
            </div>
            <div class="col-6">
               <p>
                  <%= link_to admin_comment_path(comments.id), class: "btn btn-success btn-sm" do %>
                     コメント詳細
                  <% end %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  　<%= comments.comment_content %>
               </p>
            </div>
            <div class="col-12">
               <p>
                  <%= comments.created_at.strftime('%Y/%m/%d') %>
               </p>
            </div>
         </div>
      </div>
   </div>
   <% end %>
   <div class="col-12 pt-5 ">
      <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
   </div>
</div>