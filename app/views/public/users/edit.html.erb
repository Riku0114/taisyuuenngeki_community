<div class = "container">
	<div class="wrapper">
		<h3 class="form-signin-heading pt-5">編集</h3>
		<hr class="colorgraph"><br>
		<%= form_with model: @user, url: user_path do |f| %>
		<div class="pt-4">
		   ニックネーム
         <%= f.text_field :name, class: "form-control" %>
		</div>
      <div class="pt-4">
         自己紹介
         <%= f.text_area :introduction, class: "form-control" %>
		</div>
		<div class="pt-4">
         メールアドレス
         <%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="pt-4">
         <%= f.submit '編集する', class: "btn btn-lg btn-success btn-block" %>
		</div>
		<% end %>
	</div>
</div>