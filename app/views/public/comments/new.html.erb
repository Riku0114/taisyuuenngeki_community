<div class = "container">
	<div class="wrapper">
		<h3 class="form-signin-heading pt-5">コメント</h3>
		<hr class="colorgraph"><br>
		<%= form_with model: [@post_image, @comment] do |f| %>
		<div class="pt-4">
		   <%= f.text_area :comment_content, rows: '5', placeholder: "コメントをここに", class: "form-control" %>
		</div>
      <div class="pt-4">
		   <%= f.submit "送信する", class: "btn btn-lg btn-success btn-block" %>
		</div>
		<% end %>
	</div>
</div>